#include <stdio.h>
#include <conio.h>
struct student{
    char name[25];
    int rollno;
    int marks;
    char grade;};
int main(){
      struct student stud[15];
      int i,n;
      printf("Enter the total number of students whose report cards are to be made:");
      scanf("%d",&n);
      for(i=0;i<n;i++){
           printf("Enter the studentâ€™s information:\n");
           printf("Name:");
           scanf("%s",&stud[i].name);
           printf("Rollno:");
           scanf("%d",&stud[i].rollno);
           printf("Marks(In Percent):");
           scanf("%d",&stud[i].marks);
           printf("\n");}
    for(i=0;i<n;i++){
        if(stud[i].marks <= 20){ 
             stud[i].grade = 'F';} 
        else if(stud[i].marks > 20 && stud[i].marks <= 40){ 
             stud[i].grade = 'E';} 
        else if(stud[i].marks > 40 && stud[i].marks <= 60){ 
             stud[i].grade = 'D';} 
        else if(stud[i].marks > 60 && stud[i].marks <= 75){ 
             stud[i].grade = 'C';} 
        else if (stud[i].marks > 75 && stud[i].marks <= 90){ 
             stud[i].grade = 'B';} 
        else if(stud[i].marks > 90){
             stud[i].grade = 'A';}
        
    }
    for(i = 0;i<40;i++)
    printf("_");printf("\n");
    printf("Name\tRollNo\tMarks\tGrade\n");
    for(i = 0;i<40;i++)
    printf("_");
    printf("\n");
    for(i=0;i<n;i++){
        printf("%s\t%d\t%d\t%c\n",stud[i].name,stud[i].rollno,stud[i].marks,stud[i].grade);}
    for(i = 0;i<40;i++)
    printf("_");
    printf("\n");
    getch();
       return 0;
}
